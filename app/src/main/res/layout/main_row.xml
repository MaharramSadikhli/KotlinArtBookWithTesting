<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/art_row_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/art_image"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/art_row_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_name"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="4dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/art_row_artist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_artist"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="4dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/art_row_year_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="4dp"
            android:text="@string/enter_year"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>